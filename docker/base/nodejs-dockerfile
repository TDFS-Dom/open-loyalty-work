FROM node:8.17.0

RUN echo 'deb http://deb.debian.org/debian stretch main' > /etc/apt/sources.list
RUN wget https://rubygems.org/rubygems-2.7.6.zip \
        && unzip rubygems-2.7.6.zip \
        && cd rubygems-2.7.6 \
        && ruby setup.rb
    

    
RUN npm install --unsafe-perm -g gulp node-sass
